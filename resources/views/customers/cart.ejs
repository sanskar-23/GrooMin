<section class="cart py-16">
    <% if(session.cart) { %>
        <div class="order container mx-auto w-full xl:w-1/2">
            <div class="flex items-center border-b border-300 pb-4">
                <img src="/img/cart-black.png" alt="">
                <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
            </div>
            <div class="pizza-list">
                <% for(let pizza of Object.values(session.cart.items)) {%>
                    <div class="flex items-center my-8">
                        <img class="w-24" src="/img/<%= pizza.item.image %> " alt="">
                        <div class=" flex-1 ml-4 ">
                            <h1>
                                <%= pizza.item.name %>
                            </h1>
                            <span>
                                <%= pizza.item.size%>
                            </span>
                        </div>
                        <span class="flex-1">
                            <%= pizza.qty %> item
                        </span>
                        <span class="font-bold text-lg">
                            Rs. <%= pizza.item.price * pizza.qty %>
                        </span>
                        <!-- <button class="btn-primary py-2 px-6 text-white rounded-full ml-12" id="deleteCartButton">Delete</button> -->
                    </div>
                    <% } %>
            </div>
            <hr>
            <div class="text-center lg:text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount text-2xl font-bold ml-2">Rs <%= session.cart.totalPrice %></span>
                </div>
                <% if(user) { %>
                    <div>
                        <form action="/orders" method="POST" class="mt-12">
                            <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number">
                            <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                            <div>
                                <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order
                                    Now</button>
                            </div>
                        </form>
                    </div>
                    <% } else {%>
                        <a class="inline-block cursor-pointer px-6 btn-primary py-2 rounded-full text-white font-bold mt-6" href="/login">Login To continue</a>
                        <% } %>
            </div>
        </div>
        <% } else { %>
            <div class="empty-cart py-16">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2">Cart Empty :(</h1>
                    <p class="text-gray-500 text-lg mb-12">You Probably haven't ordered any food Yet. <br> To Order some delicious food go on to the Home Page
                    </p>

                    <img class="w-2/5 mx-auto" src="/img/empty-cart.svg" alt="">
                    <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go
                        Home</a>
                </div>
            </div>
            <% } %>

</section>