<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are You hungery?</em></h6>
            <h1 class="text-6xl font-bold hmm">Don't Wait !</h1>
            <!-- <h2 class="text-6xl font-bold hmm">Order GrooMin !</h1> -->
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">
                Order Now!
            </button>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-pizza.svg" alt="hero-img">
        </div>
    </div>

</section>


<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">Food Items</h1>
    <div class="grid grid-cols-4 col-gap-12 row-gap-16">
        <% for(let pizza of pizzas) {%>
            <div class="w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image  %> " alt="food-image">
                <div class="text-center">
                    <h2 class="mb-4 text-lg">
                        <%= pizza.name %>
                    </h2>
                    <span class="size py-1 px-4 rounded-full text-xs uppercase">
                        <%= pizza.size %>
                    </span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">
                            Rs <%= pizza.price %>
                        </span>
                        <button data-pizza="<%= JSON.stringify(pizza) %> " class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
            <% } %>
    </div>
</section>